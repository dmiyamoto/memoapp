{
  "compilerOptions": {
      "target": "es5",
      "lib": ["dom", "es2015", "es2016", "es2017"],
      "module": "es2015",
      "moduleResolution": "node",
      "alwaysStrict": true,
      "experimentalDecorators": true,
      "noImplicitAny": false,
      "noImplicitThis": true,
      "strictNullChecks": true,
      "sourceMap": true,
      "removeComments": true,
      "suppressImplicitAnyIndexErrors": true,
      "allowSyntheticDefaultImports": true,
      "allowJs": true,
      "baseUrl": ".",
      // "outDir": "./store" // vuex用directory配下は.tsで作成した必要ファイルををトランスパイルする必要があるかもしれない（確認中）
      "paths": {
          "~/*": ["./*"],
          "@/*": ["./*"]
      },
      "typeRoots": [
          "node_modules/@types",
          "types"
      ]
  },
  "exclude": [
      "node_modules"
  ]
}
